<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sf="clr-namespace:Syncfusion.Maui.Calendar;assembly=Syncfusion.Maui.Calendar"
             x:Class="PlantTracker_App.CalendarPage"
             Title="Calendar"
             x:Name="CalendarRef">


    <VerticalStackLayout Padding="10" Spacing="10">       
        <sf:SfCalendar 
            SelectionMode="Single"
            SelectedDate="{Binding SelectedDate,Mode=TwoWay}"/>       
        <Label Text="{Binding SelectedDate, StringFormat='Events on {0:dd MMM yyyy}'}" FontSize="20" Margin="0,10,0,0" />
        <CollectionView ItemsSource="{Binding Events}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout>
                        <Border Stroke="#CCCCCC" StrokeThickness="1" BackgroundColor="#F6F6F6" Margin="5" Padding="10" StrokeShape="RoundRectangle 10">
                            <Label Text="{Binding Title}" FontSize="16" VerticalOptions="Center" TextColor="Black"/>                                    
                        </Border>
                        <Button Text="Delete" Command="{Binding BindingContext.DeleteEventCommand, Source={x:Reference CalendarRef}}" CommandParameter="{Binding}" WidthRequest="80" HeightRequest="20"/>
                    </HorizontalStackLayout>
                </DataTemplate>                
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="Add Event" Command="{Binding AddEventCommand}" Margin="0,10,0,0" />
    </VerticalStackLayout>


</ContentPage>