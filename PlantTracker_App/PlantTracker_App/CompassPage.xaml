<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlantTracker_App.CompassPage"
             Title="Compass">
    <VerticalStackLayout Spacing="20" Padding="20">

      
        <Image x:Name="CompassImage" Source="compass.png" HeightRequest="250" WidthRequest="250" HorizontalOptions="Center">
            <Image.Rotation>
                <Binding Path="Heading" />
            </Image.Rotation>
        </Image>

        <Label Text="{Binding Heading, StringFormat='Heading: {0:F0}Â°'}" FontSize="24" HorizontalOptions="Center"/>

        <Button Text="Start Compass" Command="{Binding StartCommand}"/>

        <Button Text="Stop Compass" Command="{Binding StopCommand}"/>
    </VerticalStackLayout>
</ContentPage>