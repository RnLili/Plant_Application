<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PlantTracker_App"
             x:Class="PlantTracker_App.MainPage"
             Loaded="MainPage_OnLoaded">
    <ScrollView>
        <Grid RowDefinitions="Auto,Auto">
            <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                <Button Text="New" Command="{Binding NewPlantCommand}" BackgroundColor="DarkOliveGreen"/>
                <Button Text="Edit" BackgroundColor="DarkOliveGreen"/>
                <Button Text="Details" Command="{Binding PlantDetailsCommand}" BackgroundColor="DarkOliveGreen"/>
                <Button Text="Delete" Command="{Binding DeletePlantCommand}" BackgroundColor="DarkOliveGreen"/>
            </HorizontalStackLayout>
            <Border StrokeThickness="5" Stroke="Lavender" StrokeShape="RoundRectangle 10" Grid.Row="1">
                <CollectionView ItemsSource="{Binding Plants}" 
                    SelectedItem="{Binding SelectedPlant}"
                    SelectionMode="Single"
                    BackgroundColor="SeaGreen">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="local:Plant">
                            <Border Margin="5" Padding="5"
        Stroke="Lavender"  StrokeThickness="2" StrokeShape="RoundRectangle 10">
                                <VerticalStackLayout>
                                    <Label FontSize="Medium" FontAttributes="Bold" Text="{Binding Name}" IsVisible="Visible"/>
                                    <Label FontSize="Small" Text="{Binding WaterNeed}" IsVisible="True"/>
                                    <Label FontSize="Small" Text="{Binding LightNeed}" IsVisible="Collapse"/>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Border>
        </Grid>
    </ScrollView>
    


</ContentPage>
