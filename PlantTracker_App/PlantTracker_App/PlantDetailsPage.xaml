<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PlantTracker_App"
             x:Class="PlantTracker_App.PlantDetailsPage"
             Title="Plant Details">

    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="Medium"/>
        </Style>
    </ContentPage.Resources>
    <VerticalStackLayout Padding="10" Spacing="10">
        <Label Text="{Binding Plant.Name,StringFormat='Name: {0}'}" FontAttributes="Bold"/>
        <Label Text="{Binding Plant.WaterNeed,StringFormat='Water Need: {0}'}"/>
        <Label Text="{Binding Plant.LightNeed,StringFormat='Light Need: {0}'}"/>
        <Label Text="{Binding Plant.Fertilizer, StringFormat='Fertilizer: {0}'}" />
        <Label Text="{Binding Plant.Description, StringFormat='Notes: {0}'}" />
    </VerticalStackLayout>
</ContentPage>